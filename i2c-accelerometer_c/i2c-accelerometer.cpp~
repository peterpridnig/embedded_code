#include<iostream>
#include<unistd.h> //for usleep
#include"GPIO.h"
using namespace exploringBB;
using namespace std;

enum AnalogInput {AIN0, AIN1, AIN2, AIN3};

class ADC {
private:
  int number;
  GPIO *inGPIO;
  
public:
  ADC();
  ~ADC();
};

ADC::ADC() {
  this->number=1;
  inGPIO=new GPIO(55);
  inGPIO->setDirection(INPUT);
}

ADC::~ADC() {
  this->number=0;
  delete inGPIO;
}

int main(){
  cout << "Hello world" << endl;
  return 0;
}

